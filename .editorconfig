# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4

# It is recommended to keep unchanged
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

[*.{html,css,scss,json,yml,xml}]
indent_size = 2

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = ignore

[*.{yaml,yml}]
indent_size = 2

[Dockerfile]
indent_style = tab
indent_size = 4

# Makefile always use tabs for indentation
[Makefile]
indent_style = tab

[*.sh]
indent_style = tab
